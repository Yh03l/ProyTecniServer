@model IEnumerable<ProyTecniServer.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Añadir Cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NOMBRE
        </th>
        <th>
            APELLIDO
        </th>
        <th>
            TELÉFONO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Cliente }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.Id_Cliente}) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Cliente})
        </td>
    </tr>
}

</table>
