@model IEnumerable<ProyTecniServer.Models.Proveedor>

@{
    ViewBag.Title = "Lista de proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Proveedores disponibles</h2>

<p>
    @Html.ActionLink("Añadir proveedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            NOMBRE
        </th>
        <th>
            APELLIDO
        </th>
        <th>
            DIRECCIÓN
        </th>
        <th>
            TELÉFONO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Proveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono_Proveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Proveedor }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.Id_Proveedor }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Proveedor })
        </td>
    </tr>
}

</table>
